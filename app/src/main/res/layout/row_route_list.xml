<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_bg_border_square"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="@dimen/_4sdp"
    android:paddingTop="@dimen/_3sdp"
    android:paddingEnd="@dimen/_4sdp"
    android:paddingBottom="@dimen/_3sdp"
    android:weightSum="2">

    <com.bouldersmart.view.CustomTextView
        android:id="@+id/tvRouteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/_3sdp"
        android:text="@string/welcome_user"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:font_text="@string/OpenSans_Regular" />

    <com.willy.ratingbar.ScaleRatingBar
        android:id="@+id/srbRouteList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        app:srb_clearRatingEnabled="true"
        app:srb_drawableEmpty="@drawable/ic_star_empty_24dp"
        app:srb_drawableFilled="@drawable/ic_star_filled_24dp"
        app:srb_isIndicator="true"
        app:srb_minimumStars="0"
        app:srb_numStars="5"
        app:srb_scrollable="false"
        app:srb_starHeight="@dimen/_15sdp"
        app:srb_starPadding="@dimen/_1ssp"
        app:srb_starWidth="@dimen/_15sdp" />
</LinearLayout>